<h1><%= @doctor.name %></h1>
<h3>Specialty: <%= @doctor.specialty %></h3>
<h3>Education: <%= @doctor.education %></h3>
<h3>Hospital: <%= @doctor.hospital.name %>
              <%= link_to "Assign #{@doctor.name} to a Different Hospital", edit_doctor_path(@doctor.id)  %>
</h3>

<section class="patients">
  <h3>Patients:</h3>
  <% @doctor.patients.each do |patient| %>
    <div id="patient-<%= patient.id %>">
      <%= patient.name %>
      <%= button_to "Remove Patient", "/doctor_patients/#{@doctor.find_doctor_patient_id(patient.id)}", method: :delete %>
    </div>
  <% end %>
</section>
