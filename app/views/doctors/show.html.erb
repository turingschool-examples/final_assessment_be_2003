<h1><%=@doctor.name%></h1>

  <p><%=@doctor.specialty%></p>
  <p><%=@doctor.hospital.name %></p>
  <%= link_to "Assign #{@doctor.name} to a Different Hospital", "/doctors/#{@doctor.id}/edit"%>

  <section id=doctors_patients>
    <%@pats.flatten.each do |patient|%>
    <section id="patient-<%=patient.id%>">
    <%= patient.name %>
    <%= link_to "remove patient", "/doctors/#{@doctor.id}/patients/#{patient.id}", method: :delete %>
    </section><% end %>
  </section>
