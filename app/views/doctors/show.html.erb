<h1><%= @doctor.name %></h1>
<p>Specialty: <%= @doctor.specialty %></p>
<p>University: <%= @doctor.education %></p>
<p>Hospital: <%= @doctor.hospital.name %></p>

<%= link_to "Assign #{@doctor.name} to a Different Hospital", "/doctors/#{@doctor.id}/reassign" %>

<h2>Patients</h2>
<% @doctor.patients.each do |patient| %>
  <section id='patient-<%= patient.id %>'>
    <%= patient.name %> <%= link_to "Remove Patient", "/doctors/#{@doctor.id}/patients/#{patient.id}", method: :delete %>
  </section>
<% end %>
