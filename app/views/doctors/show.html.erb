<h1><%= @doctor.name %></h1>

<section class='info'>
  <p>Hospital: <%= @doctor.hospital.name %></p>
  <%= link_to "Assign #{@doctor.name} to a Different Hospital", "/doctors/#{@doctor.id}/edit" %>
  <p>Speciality: <%= @doctor.speciality %></p>
  <p>Alma Mater: <%= @doctor.education %></p>
</section>

<h3>Patients</h3>
<% @doctor.patients.each do |patient| %>
<section class='patient-<%= patient.id %>'>
  <p>Name: <%= patient.name %></p>
  <%= link_to "Remove Patient From Caseload", "/doctors/#{@doctor.id}/patients?patient_id=#{patient.id}", method: :delete %>
</section>
<% end %>
