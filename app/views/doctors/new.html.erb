<% content_for :title, "New Doctor Hire for #{@hospital.name}" %>
<%= form_for [@hospital, @doctor] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :specialty %>
  <%= f.text_field :specialty %><br>

  <%= f.label :university %>
  <%= f.text_field :university %><br>

  <%= f.submit "Create Doctor" %>
<% end %>
