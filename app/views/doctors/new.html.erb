<h1>New Doctor Hire for <%= @hospital.name %></h1>
<section class="form">
  <%= form_tag "/hospitals/#{@hospital.id}/doctors", method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>

    <%= label_tag :speciality %>
    <%= text_field_tag :speciality %>

    <%= label_tag :education %>
    <%= text_field_tag :education %>

    <%= submit_tag 'Create New Doctor' %>
  <% end %>
</section>
