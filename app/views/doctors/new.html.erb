
<h1>New Doctor Hire for <%=@hospital.name %></h1>

<center>
<%= form_tag "/hospitals/#{@hospital.id}/doctors", method: :post do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @doctor[:name]%>

  <%= label_tag :specialty %>
  <%= text_field_tag :specialty, @doctor[:specialty] %>

  <%= label_tag :education %>
  <%= text_field_tag :education, @doctor[:education] %>

  <%= submit_tag 'Submit' %>
<% end %>
</center>
