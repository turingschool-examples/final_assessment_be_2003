<h1> <%= @hospital.name %> </h1>

<p> address: <%= @hospital.address %> </p>
<p> city: <%= @hospital.city %> </p>
<p> state: <%= @hospital.state %> </p>
<p> zip: <%= @hospital.zip %> </p>

<p>Doctors on staff: <%= @hospital.doctors.length %> </p>

<% schools = [] %>
<% @hospital.doctors.each do |doctor|%>
  <% schools << doctor.school %>
<% end %>
<% schools.uniq.each do |school| %>
  <%= school %>
<% end %>

<p><%= link_to "all patients", "/hospitals/#{@hospital.id}/patients" %></p>
<p><%= link_to "add new doctor", "/hospitals/#{@hospital.id}/new" %></p>
